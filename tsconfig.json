{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "connect"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
